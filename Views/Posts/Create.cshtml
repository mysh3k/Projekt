@using Microsoft.AspNetCore.Http;
@model MvcMovie.Models.Post

@{
    ViewData["Title"] = "Create";
}

<h1>Create thread</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="UserID" value="@Context.Session.GetInt32("UserID")" hidden />
            @{ 
                var data = ViewData["Message"];
            }
            <input asp-for="MovieID" value="@data" hidden />
            <div class="form-group">
                <label asp-for="Thread" class="control-label"></label>
                <input asp-for="Thread" class="form-control" />
                <span asp-validation-for="Thread" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contents" class="control-label"></label>
                <textarea rows="3" cols="50" asp-for="Contents"></textarea>
                <span asp-validation-for="Contents" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
