@using Microsoft.AspNetCore.Http;
@using MvcMovie.Helpers;
@using MvcMovie.Models;

@model MvcMovie.Models.User

@{
    ViewData["Title"] = "Edit Profile";
}

<h1>Edit Profile</h1>
@if (@Context.Session.GetInt32("UserID") == Model.Id)
            {
    <hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Username" />
            <input type="hidden" asp-for="Login" />
            <input type="hidden" asp-for="Permissions" />
            <div class="form-group">
                <label asp-for="Password" class="control-label">New Password</label>
                <input type="password" id="newPassword" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
            }
            else
            {
                <h1>Access Denied!</h1>
            }

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
